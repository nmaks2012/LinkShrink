{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug: LinkShrink Service",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/build/debug/linkshrink-app",
      "args": [
        "--config",
        "${workspaceFolder}/configs/static_config.yaml"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [
        { "name": "POSTGRES_PASSWORD", "value": "mysecretpassword" },
        { "name": "USERVER_LOG_REQUESTS", "value": "true" }
      ],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "CMake: Build (Debug)"
    }
  ]
}